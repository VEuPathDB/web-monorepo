{
  "extends": "nx/presets/npm.json",
  "workspaceLayout": {
    "appsDir": "packages/sites",
    "libsDir": "packages/libs"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build-npm-modules"]
      }
    }
  },
  "namedInputs": {
    "srcFiles": ["!{projectRoot}/{lib,dist}/**/*"]
  },
  "targetDefaults": {
    "build-npm-modules": {
      "dependsOn": ["^build-npm-modules"],
      "inputs": ["srcFiles", "^srcFiles"]
    },
    "start": {
      "dependsOn": ["^build-npm-modules"]
    },
    "bundle:dev": {
      "dependsOn": ["^clean", "^build-npm-modules"]
    },
    "bundle:npm": {
      "dependsOn": ["^clean", "^build-npm-modules"]
    },
    "storybook": {
      "dependsOn": ["^build-npm-modules"]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
