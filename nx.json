{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build-npm-modules"
        ]
      }
    }
  },
  "extends": "nx/presets/npm.json",
  "workspaceLayout": {
    "appsDir": "packages/sites",
    "libsDir": "packages/libs"
  },
  "namedInputs": {
    "srcFiles": [
      "!{projectRoot}/{lib,dist}/**/*"
    ]
  },
  "targetDefaults": {
    "build-npm-modules": {
      "dependsOn": [
        "^build-npm-modules"
      ],
      "inputs": [
        "srcFiles",
        "^srcFiles"
      ]
    },
    "start": {
      "dependsOn": [
        "^build-npm-modules"
      ]
    },
    "bundle:dev": {
      "dependsOn": [
        "^build-npm-modules"
      ]
    },
    "bundle:npm": {
      "dependsOn": [
        "^build-npm-modules"
      ]
    },
    "storybook": {
      "dependsOn": [
        "^build-npm-modules"
      ]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
