{
  "name": "monorepo-prototype",
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "packages/libs/*",
    "packages/configs/*",
    "packages/sites/*"
  ],
  "scripts": {
    "test:open": "yarn cypress open",
    "test:component": "yarn cypress run-ct",
    "test:integration": "yarn cypress run"
  },
  "resolutions": {
    "@types/react": "<18",
    "@types/react-dom": "<18",
    "react": "<18",
    "react-dom": "<18",
    "react-error-overlay": "6.0.9"
  },
  "devDependencies": {
    "@testing-library/cypress": "^9.0.0",
    "@veupathdb/prettier-config": "workspace:^",
    "cypress": "^12.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nx": "15.3.3"
  },
  "prettier": "@veupathdb/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md}": "prettier --write"
  },
  "volta": {
    "node": "16.17.1",
    "yarn": "3.3.1"
  },
  "engines": {
    "node": "<=16.17.1"
  }
}