{
  "compilerOptions": {
    "jsxImportSource": "@emotion/react",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    // "isolatedModules": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES5",
    // TODO: This is for react-table only. Hopefully can be eliminated in the future.
    "skipLibCheck": true 
  },
  "include": ["src/**/*"],
  "exclude": ["src/stories"],
}
