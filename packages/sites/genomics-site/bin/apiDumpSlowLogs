#!/bin/bash

USAGE="usage: $0 [ q | w ]"

# check argument count
if [ $# -ne 1 ]
then
  echo "$USAGE"
  exit -1
fi

PREFIX="$1"

# make sure q/w switch is one of those
if [ "$PREFIX" != "q" -a "$PREFIX" != "w" ]
then
  echo "$USAGE"
  exit -1
fi

echo dumping gbrowse slow-query logs for sites with prefix ${PREFIX} on `uname -n`

DIVIDER="--------------------------------------------------------------------------------------------------------"
for SITE in `ls /var/www/Common/tmp/gbrowseLogs/${PREFIX}?.*.org/*_slow.log | sed 's/^.*gbrowseLogs\///'|sed 's/\/.*$//'|sort -u`
do
  echo $DIVIDER
  echo "${SITE} gbrowse:"
  echo

  cat /var/www/Common/tmp/gbrowseLogs/${SITE}/*slow.log | gbrowseSlowQueryReport -s .01 -g -t 1293858000
done

echo $DIVIDER
echo "gbrowse combined:"
echo

cat /var/www/Common/tmp/gbrowseLogs/${PREFIX}?.*.org/*_slow.log | gbrowseSlowQueryReport -s .01 -g -t 1293858000

SITES="tritrypdb3.0 trichdb1.2.4 cryptodb4.3.5 amoeba1.3.1 plasmo7.1.1 toxo6.3 giardiadb2.3.2"

if [ "$PREFIX" = "w" ]
then
  SITES="tritrypdb2.5 trichdb1.2.3 cryptodb4.3.4 amoeba1.3 plasmo7.1.1 toxo6.2.1 giardiadb2.3.1"
fi

for SITE in $SITES
do
  echo $DIVIDER
  echo "${SITE} wdk:"
  echo

  cat /usr/local/tomcat_instances/*/logs/${SITE}/wdk-warn.log4j | wdkSlowQueryReport -s .01 -g -t 1293858000
done

